		 <column-type db="mysql" type="tinyint"/>
      </column>
      <column name="bp_stage_sequence" nullable="n">
         <column-type db="generic" type="integer"/>
      </column>
      <check name="drpt_bpstage_c">
         <check-expr expression="is_transient in (0,1)" db="generic"/>
      </check>
   </table>
